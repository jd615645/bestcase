extends layout
block style
  link(rel='stylesheet', href='./style/contact.css')
  
block content
  // === Content Part ===
  .container.content
    .headline-center-v2.headline-center-v2-dark.margin-bottom-60
      h2 聯絡我們
      span.bordered-icon
        i.fa.fa-th-large
    .row.margin-bottom-60
      .col-md-6.col-sm-6
        // Google Map
        #map.height-450
        // End Google Map
      .col-md-6.col-sm-6
        // Contacts
        h3 聯絡方式
        ul.list-unstyled.who
          li
            a(href='#')
              i.fa.fa-home
              | 408台中市南屯區文心南路三路996巷2號1樓
          li
            a(href='#')
              i.fa.fa-envelope
              | bestcase@gmail.com
          li
            a(href='#')
              i.fa.fa-phone
              | 04 2462 1683
          li
            a(href='#')
              i.fa.fa-fax
              | 04 2462 0995
          li
            a(href='#')
              i.fa.fa-globe
              | https://bestcase.com.tw/
        hr
        // Business Hours
        h3 工作時間
        ul.list-unstyled
          li
            strong Monday-Friday:
            |  10am to 8pm
          li
            strong Saturday:
            |  11am to 3pm
          li
            strong Sunday:
            |  Closed
  // === End Content Part ===
block append js
  // JS Implementing Plugins
  script(type='text/javascript', src='assets/plugins/back-to-top.js')
  script(type='text/javascript', src='assets/plugins/smoothScroll.js')
  script(type='text/javascript', src='https://maps.google.com/maps/api/js?key=AIzaSyDXyvSFXaifhFrpK43NvquFKMgC_YASvKI')
  script(type='text/javascript', src='assets/plugins/gmap/gmap.js')
  script(type='text/javascript', src='assets/plugins/owl-carousel/owl-carousel/owl.carousel.js')

  // JS Page Level
  script(type='text/javascript', src='assets/js/app.js')
  script(type='text/javascript', src='assets/js/pages/page_contacts.js')
  script(type='text/javascript', src='assets/js/plugins/owl-carousel.js')
  script(type='text/javascript', src='assets/js/plugins/style-switcher.js')
  script(type='text/javascript').
    jQuery(document).ready(function() {
      App.init();
      ContactPage.initMap();
      OwlCarousel.initOwlCarousel();
      StyleSwitcher.initStyleSwitcher();
    });
